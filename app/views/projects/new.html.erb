<div class="row">
	<div class="col-md-6 col-md-offset-3">
	  <h1>New Project</h1> 
	  <div>&nbsp;</div>
	  <% if @project.errors.full_messages.present? %>
	    <% @project.errors.full_messages.each do |message| %>
	      <div class="alert alert-danger" role="alert"><%= message -%></div>
	    <% end %>
	  <% end %>

		<%= form_for(@project, as: :project, url: "/projects", html: {class: "form-horizontal"}) do |f| %>
  			<%= render partial: "form", locals: {f: f, button_text: "Create Project"} -%>
		<% end %>
	</div>
</div>
