<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="inputEmail">Email</label>
    <div class="col-sm-6">
      <%= f.email_field :email, autofocus: true, id: "inputEmail", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="inputPassword">Password</label>
    <div class="col-sm-6">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", id: "inputPassword", class: "form-control" %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %>
          <%#= f.label :remember_me %>
        </label>
        </div>
      </div>
    </div>
        
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Sign in", class: "btn btn-default btn-primary" %>
    </div>
  </div>
  
<% end %>

<%= render "devise/shared/links" %>
