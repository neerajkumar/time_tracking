<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <div class="row">
        <div class="col-md-9 col-md-offset-1">
          <h2>Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
          <%#= devise_error_messages! %>

          <div class="form-group">
            <label class="col-sm-4 control-label" for="inputPasswordConfirmation">First Name</label>
            <div class="col-sm-5">
              <%= f.text_field :first_name, autocomplete: "off", id: "FirstName" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-4 control-label" for="inputPasswordConfirmation">Last Name</label>
            <div class="col-sm-5">
              <%= f.text_field :last_name, autocomplete: "off", id: "LastName" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-4 control-label" for="inputPasswordConfirmation">Portal ID</label>
            <div class="col-sm-5">
              <%= f.text_field :portal_id, autocomplete: "off", placeholder: "Portal ID", id: "portalID" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-4 control-label" for="inputEmail">Email</label>
            <div class="col-sm-5">
              <%= f.email_field :email, autofocus: true, id: "inputEmail" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-4 control-label" for="inputPassword">Password</label>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <div class="col-sm-5">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password", id: "inputPassword" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-4 control-label" for="inputPasswordConfirmation">Password Confirmation</label>
            <div class="col-sm-5">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password", id: "inputPasswordConfirmation" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-6 pull-right">
              <%= f.submit "Sign up", class: "btn btn-default btn-primary" %>
            </div>
          </div>
        </div>
        <% end %> 
      </div>     
    </div>     
  </div>
  </div>
